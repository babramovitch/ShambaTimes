<resources>

    <style name="card_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/card_left_right_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_left_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_top_bottom_margin</item>
        <item name="android:layout_marginTop">@dimen/card_top_bottom_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="card_style_landscape">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>


    </style>


    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="list_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

