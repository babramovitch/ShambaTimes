<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@drawable/list_forest_selector"
    android:gravity="center_vertical"
    android:id="@+id/artistLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
    <TextView
        style="@style/ListViewMedium"
        android:text="Medium Text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/artistName" />

    <TextView
        android:id="@+id/artistTime"
        android:text="Schedule Times"
        style="@style/ListViewSmall" />



    <TextView
        android:id="@+id/artistStartTimePosition"
        android:visibility="gone"
        style="@style/ListViewSmall" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingRight="20dp"
        android:paddingLeft="30dp"
        android:src="@drawable/favorite_outline"
        android:id="@+id/list_favorited" />

</LinearLayout>