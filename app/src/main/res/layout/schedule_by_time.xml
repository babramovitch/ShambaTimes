<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headline_time"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarDefaultDelayBeforeFade="500">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pagoda_view"
                style="@style/card_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stage_pagoda_text"
                        style="@style/card_header"
                        android:text="PAGODA" />

                    <TextView
                        android:id="@+id/stage_pagoda_artist"
                        style="@style/card_content"
                        android:text="Claude VonStroke" />

                    <TextView
                        android:id="@+id/stage_pagoda_time"
                        style="@style/card_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fractal_forest_view"
                style="@style/card_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stage_fractal_forest_text"
                        style="@style/card_header"
                        android:text="FRACTAL FOERST" />

                    <TextView
                        android:id="@+id/stage_fractal_forest_artist"
                        style="@style/card_content"
                        android:text="Claude VonStroke" />

                    <TextView
                        android:id="@+id/stage_fractal_forest_time"
                        style="@style/card_content"
                        android:text="" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/grove_view"
                style="@style/card_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stage_grove_text"
                        style="@style/card_header"
                        android:text="THE GROVE" />

                    <TextView
                        android:id="@+id/stage_grove_artist"
                        style="@style/card_content"
                        android:text="Claude VonStroke" />

                    <TextView
                        android:id="@+id/stage_grove_time"
                        style="@style/card_content"
                        android:text="" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/living_room_view"
                style="@style/card_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stage_living_room_text"
                        style="@style/card_header"
                        android:text="LIVING ROOM" />

                    <TextView
                        android:id="@+id/stage_living_room_artist"
                        style="@style/card_content"
                        android:text="Claude VonStroke" />

                    <TextView
                        android:id="@+id/stage_living_room_time"
                        style="@style/card_content"
                        android:text="" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/village_view"
                style="@style/card_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stage_village_text"
                        style="@style/card_header"
                        android:text="THE VILLAGE" />

                    <TextView
                        android:id="@+id/stage_village_artist"
                        style="@style/card_content"
                        android:text="Claude VonStroke" />

                    <TextView
                        android:id="@+id/stage_village_time"
                        style="@style/card_content"
                        android:text="" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/amphitheatre_view"
                style="@style/card_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stage_amphitheatre_text"
                        style="@style/card_header"
                        android:text="The AMPHITHEATRE" />

                    <TextView
                        android:id="@+id/stage_amphitheatre_artist"
                        style="@style/card_content"
                        android:text="Claude VonStroke" />

                    <TextView
                        android:id="@+id/stage_amphitheatre_time"
                        style="@style/card_content"
                        android:text="" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>